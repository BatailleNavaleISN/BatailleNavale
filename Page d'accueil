   }
else
if (mouseX > 700 && mouseX < 850 && mouseY > 460 && mouseY < 535) {
      fill(255,0,0);
      rect (760, 470, 150, 75);
      fill (255) ;
      text ("Difficile", 789, 517);
  }
  
  
  
  
  
  
  
  
  
if (mousePressed && mouseX > 700 && mouseX < 850 && mouseY > 260 && mouseY < 335 == true) 
  {
     
        stroke(21, 96, 189);
